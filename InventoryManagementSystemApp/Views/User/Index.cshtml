@model IEnumerable<InventoryManagementSystemDomain.Entity.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Operations</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<br />
<p>
    <a asp-action="">retrieve all users</a>
</p>
<br />
<p>
    <a asp-action="">retrieve a user by :id</a>
</p>
<br />
<p>
    <a asp-action="">retrieve a user by :name</a>
</p>
<br />
<p>
    <a asp-action="">
        update a user by :id
    </a>
